# Application Configuration
APP_NAME=SERVICE-OTP
APP_ENV=development
PORT=8080

# Enable DB-backed features (users/roles/permissions/menus/sessions)
ENABLE_DB=false

# Database Configuration
# Used only when ENABLE_DB=true
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASS=your_password
DB_NAME=service_otp
DB_SSLMODE=disable

# JWT Configuration
JWT_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_EXP=24

# Database Migration Configuration
PATH_MIGRATE=file://migrations

# Cache Configuration (in seconds)
TTL_CACHE_CONFIG_APP=86400

# Application Config ID (Optional)
CONFIG_ID=

# Redis Configuration (for session management and rate limiting)
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting Configuration
LOGIN_ATTEMPT_LIMIT=5
LOGIN_ATTEMPT_WINDOW_SECONDS=60
LOGIN_BLOCK_DURATION_SECONDS=300
REGISTER_RATE_LIMIT=5
REGISTER_RATE_WINDOW_SECONDS=60

# OTP Configuration
OTP_TTL=5m
OTP_TTL_SECONDS=
OTP_COOLDOWN=60s
OTP_COOLDOWN_SECONDS=
OTP_MAX_ATTEMPTS=5
OTP_RATE_LIMIT=5
OTP_RATE_WINDOW=5m
OTP_RATE_WINDOW_SECONDS=
OTP_SECRET=change-me

# SMTP Configuration (Brevo)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_brevo_smtp_key
SMTP_FROM=YourApp <no-reply@yourapp.test>
SMTP_SUBJECT=Your Registration OTP

# Storage Configuration (for file/image uploads)
# Supported providers: "minio" or "r2" (Cloudflare R2)
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET_NAME=uploads
STORAGE_USE_SSL=false
STORAGE_BASE_URL=http://localhost:9000
STORAGE_REGION=auto

# Cloudflare R2 Configuration (only if STORAGE_PROVIDER=r2)
R2_ACCOUNT_ID=your_cloudflare_account_id

# Logging
LOG_LEVEL=5
LOG_FORMAT=json
